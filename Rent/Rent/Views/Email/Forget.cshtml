    <main class="form-signin">
        <div class="center-content align-content-md-end text-light">
            @using (Html.BeginForm("Forget", "Email", FormMethod.Post))
            {
                <h1 class="h3 mb-3 fw-normal text-white">忘記密碼</h1>
                <p></p>
                <div class="form-floating">
                    <input id="Email" name="Email" type="text" class="form-control" placeholder="輸入信箱" required />
                    <label for="Email">輸入信箱</label>
                </div>
                <p></p>
                <button class=" btn btn-lg btn-primary" input type="submit" value="提交">確定</button>
                
            }
            @if (IsPost && ViewData.ModelState.ContainsKey("EmailNotFound"))
            {
                <div class="error text-danger">
                    @Html.ValidationMessage("EmailNotFound")
                </div>
            }
        </div>
</main>



